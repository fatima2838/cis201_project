.dropbtn {

  padding: 16px;
  border: none;
  float: right;
}

.dropdown {
  position: relative;
  display: inline-block;
  left: 240px; 
top: 0px; 
}

.dropdown-content{
  display: none;
  position: absolute;
  background-color: #212121;
  min-width: 160px;
  z-index: 1;
  position: absolute;
  top: 100%; /* Bottom of button */
  right: 0;
  margin-left: -100px;
}

.dropdown-content a {
  font-family: Arial;
  color: white;
  padding: 12px 16px;
  text-decoration: none;
  display: block;
   opacity: 1;
}

.dropdown-content a:hover {background-color: #181818;
 opacity: .7;}

.dropdown:hover .dropdown-content {display: block;}

#dropbtn{

width: 70px; 
height: 70px; 
}



